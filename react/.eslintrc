{
  extends: [
    'eslint:recommended', 'plugin:react/recommended'
  ],
  parserOptions: {
    ecmaVersion: 6,
    sourceType: 'module'
  },
  env: {
    browser: true,
    node: true,
    jest: true
  },
  plugins: [
    'react'
  ],
  rules: {
    quotes: ['error', 'single', {avoidEscape: true}]
  }
}
